<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:backgroundTint="#ffeefaff"
    android:paddingEnd="@dimen/abc_action_button_min_width_material">

    <TextView android:text="@string/heading" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:id="@+id/heading" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/button_spotify"
        android:layout_below="@+id/heading"
        android:layout_marginTop="40dp"
        android:layout_centerInParent="true"
        android:background="#ffd97d15"
        android:clickable="true"
        android:enabled="true"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:shadowColor="#75080605"
        android:singleLine="true"
        android:textColor="#ff000000"
        android:onClick="buttonClickHandler" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/button_scores_app"
        android:background="#ffd97d15"
        android:clickable="true"
        android:enabled="true"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:shadowColor="#75080605"
        android:singleLine="true"
        android:textColor="#ff000000"
        android:layout_below="@+id/button_spotify"
        android:layout_alignLeft="@+id/button_spotify"
        android:layout_alignStart="@+id/button_spotify"
        android:onClick="buttonClickHandler"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/button_library"
        android:background="#ffd97d15"
        android:clickable="true"
        android:enabled="true"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:shadowColor="#75080605"
        android:singleLine="true"
        android:textColor="#ff000000"
        android:layout_below="@+id/button_scores_app"
        android:layout_alignLeft="@+id/button_scores_app"
        android:layout_alignStart="@+id/button_scores_app"
        android:onClick="buttonClickHandler"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/button_bib"
        android:background="#ffd97d15"
        android:clickable="true"
        android:enabled="true"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:shadowColor="#75080605"
        android:singleLine="true"
        android:textColor="#ff000000"
        android:layout_below="@+id/button_library"
        android:layout_alignLeft="@+id/button_library"
        android:layout_alignStart="@+id/button_library"
        android:onClick="buttonClickHandler"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/button_xyz"
        android:background="#ffd97d15"
        android:clickable="true"
        android:enabled="true"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:shadowColor="#75080605"
        android:singleLine="true"
        android:textColor="#ff000000"
        android:layout_below="@+id/button_bib"
        android:layout_alignLeft="@+id/button_bib"
        android:layout_alignStart="@+id/button_bib"
        android:onClick="buttonClickHandler"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/button_capstone"
        android:background="#ffc00601"
        android:clickable="true"
        android:enabled="true"
        android:focusable="true"
        android:focusableInTouchMode="false"
        android:shadowColor="#75080605"
        android:singleLine="true"
        android:textColor="#ffffffff"
        android:layout_below="@+id/button_xyz"
        android:layout_alignLeft="@+id/button_xyz"
        android:layout_alignStart="@+id/button_xyz"
        android:onClick="buttonClickHandler"
        android:layout_marginTop="10dp" />

</RelativeLayout>
